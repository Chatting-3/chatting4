<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="chatMapper">

  <resultMap type="ChatRoom" id="ChatRoomResultSet">
  		<id property="chatroom_no" column="CR_NO"/>
  			<result property="chatroomname" column="CR_NAME"/>
  			<result property="creater" column="CR_ID"/>
  			<result property="current_no" column="CR_CURRENT"/>
  			<result property="createdate" column="CR_CREATE_DATE"/>
  </resultMap>

  <select id="selectList" resultMap="ChatRoomResultSet">
  		SELECT *
  		FROM CHATROOM
  		ORDER BY CR_NO ASC
  </select>
  
    <insert id="insertChatRoom" parameterType="ChatRoom">
  			INSERT INTO CHATROOM VALUES
  								(SEQ_CID.NEXTVAL
  								, #{chatroomname}
  								, #{creater}
  								, 0
  								, DEFAULT)
  	</insert>
  
    <select id="selectChatRoomOne" parameterType="string" resultMap="ChatRoomResultSet">
  		SELECT *
  		FROM CHATROOM
  		WHERE CR_NAME = #{chatroomname}
  </select>
  
  <update id="outchatroomupdate" parameterType="_int" >
  	UPDATE CHATROOM
  	SET
  	CR_CURRENT = CR_CURRENT - 1
  </update>
  
  <update id="joinroomupdate" parameterType="_int">
  	UPDATE CHATROOM
  	SET
  	CR_CURRENT = CR_CURRENT + 1
  </update>

</mapper>











